<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.galaxcom.lumiereapp.activities.pedidos.ListadoProductosAgregarPedidoActivity">
<android.support.v7.widget.RecyclerView
    android:id="@+id/rvProductosAgregarPedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="30dp"
    >
</android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorAccent"
        android:background="@color/colorAccent"
        android:text="@string/btnContinuar"
        android:textColor="@color/colorTextoBotones"
        android:textStyle="bold"
        android:onClick="btnContinuarOnClick"
        />
</RelativeLayout>
